<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WebsiteChangeLoggerController">
    <top>
        <VBox>
            <Button text="Start" onAction="#startWebsiteWatcher"/>
            <Button text="Stop" onAction="#stopWebsiteWatcher"/>
        </VBox>
    </top>
    <center>
        <TextArea fx:id="consoleTextArea" editable="false" style="-fx-font-family: monospace;"/>
    </center>
</BorderPane>
